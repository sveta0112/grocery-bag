<% include partials/header %>
    <div class="container" style="margin-top: 40px;">
        <ul class="collection with-header">
            <li class="collection-header"><h4>Item info</h4></li>
            <li class="collection-header"><div><strong>Section:</strong> <%= item.category %></div></li>
            <li class="collection-header"><div><strong>Buy from:</strong> <%= item.store %></div></li>
            <li class="collection-header"><div><strong>Things to remember:</strong> <%= item.notes %></div></li>
            
        

        <% if(currentUser && item.author.id.equals(currentUser._id)) { %>
            <a  class="btn green darken-3" href="/items/<%= currentUser._id%>">Go Back!</a>
            <form class="delete-form" action="/items/<%= item._id %>?_method=DELETE" method="POST">
                <button class="btn red darken-3">Delete</button>
            </form>
        <% } %>
        
    </div>
<% include partials/footer %>
